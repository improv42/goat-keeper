<h1>Listing Owners</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Alt phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.order('last_name').each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.alt_phone %></td>
        <td><%= link_to fa_icon('eye', text: 'Show Owner'), owner %></td>
        <td><%= link_to fa_icon('pencil', text: 'Edit Owner'), edit_owner_path(owner) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-info btn-sm" %>
