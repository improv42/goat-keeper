<h1>All Our Dogs
<%= link_to 'New Dog', new_dog_path, class: "btn btn-info btn-sm" %></h1>
<hr>
<div class="row">
  <% @dogs.order('name').each do |dog| %>
    <div class="col-xs-6 col-md-4">
      <div class="panel <%= dog.in_daycare ? 'panel-success' : 'panel-default' %> ">
        <div class="panel-heading">
          <h3 class="panel-title"><%= dog.name %> <%= dog.owner.last_name %> </h3>
        </div>
        <div class="panel-body">
          <%= image_tag dog.avatar.url(:medium), class: 'img-responsive img-circle center-block' %>
          <p class="text-center">
            <%= link_to fa_icon('eye lg', text: 'Show Dog'), dog, class: "btn btn-info btn-sm" %>
            <%= link_to fa_icon('pencil lg', text: 'Edit Dog'), edit_dog_path(dog), class: "btn btn-info btn-sm" %>
            <%= form_for(dog) do |f| %>
              <div>
                <%= f.check_box :in_daycare, class: "field checkbox-inline form-group" %>
                <button type="submit" data-toggle="btn" class="btn btn-sm <%= dog.in_daycare ? 'btn-success' : 'btn-info' %>">
                  <%= 'In Daycare' %>
                  <% f.submit %>
                </button>
              </div>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

