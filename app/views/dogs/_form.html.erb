<%= form_for(@dog) do |f| %>
  <% if @dog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= :select_name %>
<%= :first_name %>
  <div class="field">
    <%= f.label 'Name' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Date of Birth' %><br>
    <%= f.date_select(:dob, :order => [:month, :day, :year]) %>
  </div>
  <div class="field">
    <%= f.label 'Breed' %><br>
    <%= f.collection_select :breed_id, Breed.order('breed_name'), :id, :breed_name %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.order('last_name'), :id, :sort_name %>
  </div>
  <div class="field">
    <%= f.label :med_cond %><br>
    <%= f.text_field :med_cond %>
  </div>
  <div class="field">
    <%= f.label :vet_id %><br>
    <%= f.collection_select :vet_id, Vet.order('doctor'), :id, :doctor %>
  </div>
  <div class="actions">
    <%= f.submit "Save Dog", class: "btn btn-success btn-sm" %>
  </div>
<% end %>
